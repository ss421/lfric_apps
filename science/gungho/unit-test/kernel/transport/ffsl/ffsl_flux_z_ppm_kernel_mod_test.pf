!> This code tests PPM with different monotonicity options in the vertical.

module ffsl_flux_z_ppm_kernel_mod_test

  use constants_mod, only : i_def, l_def, r_tran
  use pFUnit_Mod

  implicit none

  private
  public :: test_all

contains

  !!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  @test
  subroutine test_all( )

    use, intrinsic :: iso_fortran_env,      only : real64
    use ffsl_flux_z_ppm_kernel_mod,         only : ffsl_flux_z_ppm_code
    use transport_enumerated_types_mod,     only : vertical_monotone_strict,   &
                                                   vertical_monotone_relaxed,  &
                                                   vertical_monotone_positive, &
                                                   vertical_monotone_none

    implicit none

    real(r_tran),   parameter :: tol       = 1.0e-12_r_tran   ! r_tran 64bit
    integer(i_def), parameter :: nlayers   = 5
    integer(i_def), parameter :: ndf_w3    = 1
    integer(i_def), parameter :: ndf_w2v   = 2
    integer(i_def), parameter :: undf_w3   = nlayers
    integer(i_def), parameter :: undf_w2v  = nlayers+1
    logical(l_def), parameter :: log_space = .false.
    real(r_tran),   parameter :: dt        = 4.0_r_tran
    real(r_tran),   parameter :: area      = 2.0_r_tran
    real(r_tran),   parameter :: min_val   = 0.0_r_tran
    integer(i_def), dimension(ndf_w3)  :: map_w3
    integer(i_def), dimension(ndf_w2v) :: map_w2v

    real(r_tran), dimension(undf_w2v) :: flux
    real(r_tran), dimension(undf_w2v) :: frac_wind

    real(r_tran) :: field(5)
    real(r_tran) :: dz(5)
    real(r_tran) :: detj(5)
    real(r_tran) :: dep_pts(6)
    real(r_tran) :: answer(1:6)

    real(r_tran)   :: use_tol
    integer(i_def) :: monotone

    ! Set up maps
    map_w3(1)= 1
    map_w2v(:) = (/ 1, 2 /)

    ! Set constant grid spacing for PPM tests
    dz = (/ 1.0_r_tran, 1.0_r_tran, 1.0_r_tran, 1.0_r_tran, 1.0_r_tran /)
    detj(:) = dz(:)*area

    ! Use linear field
    field = (/ 1.0_r_tran, 2.0_r_tran, 3.0_r_tran, 4.0_r_tran, 5.0_r_tran /)
    dep_pts = (/ 0.0_r_tran, 0.2_r_tran, 0.5_r_tran, -1.2_r_tran, -0.2_r_tran, 0.0_r_tran /)
    frac_wind = (/ 0.0_r_tran, 1.0_r_tran, 2.0_r_tran, -2.0_r_tran, -1.0_r_tran, 0.0_r_tran /)
    answer = (/ 0.0_r_tran,  0.35_r_tran,  1.125_r_tran, -4.3_r_tran,  -1.15_r_tran,  0.0_r_tran /)

    ! No limiter
    monotone = vertical_monotone_none
    call ffsl_flux_z_ppm_code( nlayers,   &
                               flux,      &
                               frac_wind, &
                               dep_pts,   &
                               field,     &
                               dz,        &
                               detj,      &
                               dt,        &
                               monotone,  &
                               min_val,   &
                               log_space, &
                               ndf_w2v,   &
                               undf_w2v,  &
                               map_w2v,   &
                               ndf_w3,    &
                               undf_w3,   &
                               map_w3 )

    if ( r_tran == real64 ) then
      use_tol = tol
    else
      ! Set tolerance based on precision of field
      use_tol = 10.0_r_tran*spacing( maxval(field(:)) )
    endif

    @assertEqual(answer, flux, use_tol)

    ! Use field to generate extrema
    field = (/ 1.0_r_tran, 4.0_r_tran, 9.0_r_tran, 0.0_r_tran, 1.0_r_tran /)
    dep_pts = (/ 0.0_r_tran, 0.2_r_tran, 0.5_r_tran, -1.2_r_tran, -0.2_r_tran, 0.0_r_tran /)
    frac_wind = (/ 0.0_r_tran, 1.0_r_tran, 2.0_r_tran, -2.0_r_tran, -1.0_r_tran, 0.0_r_tran /)
    answer = (/ 0.0_r_tran,  0.25_r_tran,  2.8125_r_tran, -0.5_r_tran,  -0.25_r_tran,  0.0_r_tran /)

    ! Relaxed limiter
    monotone = vertical_monotone_relaxed
    call ffsl_flux_z_ppm_code( nlayers,   &
                               flux,      &
                               frac_wind, &
                               dep_pts,   &
                               field,     &
                               dz,        &
                               detj,      &
                               dt,        &
                               monotone,  &
                               min_val,   &
                               log_space, &
                               ndf_w2v,   &
                               undf_w2v,  &
                               map_w2v,   &
                               ndf_w3,    &
                               undf_w3,   &
                               map_w3 )

    if ( r_tran == real64 ) then
      use_tol = tol
    else
      ! Set tolerance based on precision of field
      use_tol = 10.0_r_tran*spacing( maxval(field(:)) )
    endif

    @assertEqual(answer, flux, use_tol)

    ! Strict limiter should produce same answers as relaxed for this data
    monotone = vertical_monotone_strict
    call ffsl_flux_z_ppm_code( nlayers,   &
                               flux,      &
                               frac_wind, &
                               dep_pts,   &
                               field,     &
                               dz,        &
                               detj,      &
                               dt,        &
                               monotone,  &
                               min_val,   &
                               log_space, &
                               ndf_w2v,   &
                               undf_w2v,  &
                               map_w2v,   &
                               ndf_w3,    &
                               undf_w3,   &
                               map_w3 )

    if ( r_tran == real64 ) then
      use_tol = tol
    else
      ! Set tolerance based on precision of field
      use_tol = 10.0_r_tran*spacing( maxval(field(:)) )
    endif

    @assertEqual(answer, flux, use_tol)

    ! Positivity should only limit when subgrid reconstruction has negatives
    monotone = vertical_monotone_positive
    answer = (/ 0.0_r_tran, 0.25_r_tran, 17.0_r_tran/6.0_r_tran, &
               -0.5_r_tran, -0.25_r_tran, 0.0_r_tran /)
    call ffsl_flux_z_ppm_code( nlayers,   &
                               flux,      &
                               frac_wind, &
                               dep_pts,   &
                               field,     &
                               dz,        &
                               detj,      &
                               dt,        &
                               monotone,  &
                               min_val,   &
                               log_space, &
                               ndf_w2v,   &
                               undf_w2v,  &
                               map_w2v,   &
                               ndf_w3,    &
                               undf_w3,   &
                               map_w3 )

    if ( r_tran == real64 ) then
      use_tol = tol
    else
      ! Set tolerance based on precision of field
      use_tol = 10.0_r_tran*spacing( maxval(field(:)) )
    endif

    @assertEqual(answer, flux, use_tol)

  end subroutine test_all

end module ffsl_flux_z_ppm_kernel_mod_test
